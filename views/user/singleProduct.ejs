               <script>

                function addToCart(productId){
                        $.ajax({
                            url:'/addToCart',
                            method:'post',
                            data:{
                                id: productId
                            },
                            success:(response)=>{  
                                if(response.success){
                                    swal.fire({
                                    position: 'center',
                                    icon: 'success',
                                    title: 'Product added to cart',
                                    showConfirmButton: false,
                                    timer: 1500,        
                                    });
                                }else{
                                    swal.fire({ 
                                    icon: 'error',
                                    title: 'Oops...',
                                    text: response.message
                                    });
                                }
                            }
                        })
                    }

                    function plzlogin() {
        $.ajax({
            success: (response) => {
                swal.fire({
                    position: 'top',
                    title: '! Please Login To Your Account',
                    showConfirmButton: false,
                    timer: 1500,
                    customClass: {
                        popup: 'my-swal-class',
                    },
                });
            }
        });
    }

